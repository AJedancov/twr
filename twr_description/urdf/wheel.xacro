<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
 
    <xacro:macro name="wheel" params="name parent xyz rpy radius width m xyz_axis material_name">
    <joint name="${name}_joint" type="continuous">
        <parent link="${parent}"/>
        <child link="${name}_link"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
        <axis xyz="${xyz_axis}"/>
    </joint>

    <link name="${name}_link">
        <visual>
            <geometry>
                <cylinder radius="${radius}" length="${width}"/>
            </geometry>
            <material name="${material_name}"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="${radius}" length="${width}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>

        <xacro:cylinder_inertia m="${m}" r="${radius}" l="${width}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:cylinder_inertia>
    </link>
    </xacro:macro> 
    
</robot>